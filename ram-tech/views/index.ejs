        </article>

        <article>
          <a href="#" id="product-redirect">
            <img src="/images/images-products/razer-viper-mini-usp1-mobile.jpg" alt="Mouse Razer">
            <div class="main-article">
              <i class="fa-solid fa-heart heart-icon"></i>
              <h4 class="description">Mouse Razer</h4>
              <div class="description-container">
                <p class="price">$12.200</p>
                <p class="discount">0% Off</p>
              </div>
            </div>
          </a>
        </article>

        <article>
          <a href="#" id="product-redirect">
            <img src="/images/images-products/teclado-reddragon.jpg" alt="Teclado Redragon">
            <div class="main-article">
              <i class="fa-solid fa-heart heart-icon"></i>
              <h4 class="description">Teclado Redragon</h4>
              <div class="description-container">
                <p class="price">$14.500</p>
                <p class="discount">0% Off</p>
              </div>
            </div>
          </a>
        </article>

        <article>
          <a href="#" id="product-redirect">
            <img src="/images/images-products/tarjeta-grafica.jpg" alt="Placa de video rtx 3060 AorusElite">
            <div class="main-article">
              <i class="fa-solid fa-heart heart-icon"></i>
              <h4 class="description">Placa de video rtx 3060 AorusElite</h4>
              <div class="description-container">
                <p class="price">$250.000</p>
                <p class="discount">0% Off</p>
              </div>
            </div>
          </a>
        </article>

    </section>

