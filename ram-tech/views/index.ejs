<body>
  <header>
    <div class="flex" style="background-image: url('../images/bg2.jpg')">
      
      <div class="logo">
        <a href="/"><img src="/images/logo2.png" alt="RamTech"></img></a>
      </div>

      <div class="navbar">
        <nav>
          <form action="/" method="post">
            <button class="search"><i class="fa-solid fa-magnifying-glass"></i></button>
            <button class="submit" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
            <input type="text" placeholder="Buscar..." name="search" id="">
          </form>
        </nav>

        <div class="icons">
          <ul>
            <button>
              <a href="/login">
                <li><i class="fa-solid fa-user-astronaut"></i></li>
              </a>
            </button>
            <button>
              <a href="/product-cart">
                <li><i class="fa-solid fa-cart-shopping"></i></li>
              </a>
            </button>
          </ul>
        </div>
      
        <div class="burger-menu">
          <i class="fa-solid fa-bars"></i>
        </div>

      </div>
    </div>
  </header>
  <main>
    <section class="carousel">
      <i><img src="/images/carousel1.jpg" alt="Imagen de oferta"></i>
      <i class="tablet"><img src="/images/carousel2.jpg" alt="Imagen de oferta"></i>
      <i class="desktop"><img src="/images/carousel3.jpg" alt="Imagen de oferta"></i>
    </section>
    <section class="categories">
      <nav>
        <ul>
          <li><i class="fa-solid fa-microchip"></i></li>
          <li><i class="fa-solid fa-desktop"></i></li>
          <li><i class="fa-solid fa-computer-mouse"></i></li>
          <li><i class="fa-regular fa-keyboard"></i></li>
          <li><i class="fa-solid fa-print"></i></li>
          <li><i class="fa-solid fa-microphone"></i></li>
          <li><i class="fa-solid fa-headset"></i></li>
          <li><i class="fa-solid fa-hard-drive"></i></li>
        </ul>
      </nav>
    </section>

    <section class="highlight">

      <div class="title-section">

        <h2 class="title">
          <strong>Destacados del mes</strong>
        </h2>
      </div>


      <div class="products">
        <article>
          <a href="/product-detail" id="product-redirect">
            <img src="/images/images-products/joy-con01.jpg" alt="Controles Nintendo Switch">
